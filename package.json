{
  "name": "m5docs-team-helper",
  "displayName": "M5Docs Team Helper",
  "description": "A VS Code extension for M5Stack Docs team to improve editing efficiency.",
  "publisher": "Harrison-Xu",
  "repository": {
    "type": "git",
    "url": "https://github.com/Harrison-Xu/M5Docs_Team_VSCode_Helper.git"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "m5docs.openAllLanguages",
        "title": "M5Docs: 同时打开三语文件 (All languages)"
      },
      {
        "command": "m5docs.openSibling.zh_CN",
        "title": "M5Docs: 打开中文文件 (zh_CN)"
      },
      {
        "command": "m5docs.openSibling.en",
        "title": "M5Docs: 打开英文文件 (en)"
      },
      {
        "command": "m5docs.openSibling.ja",
        "title": "M5Docs: 打开日文文件 (ja)"
      },
      {
        "command": "m5docs.openOnline",
        "title": "M5Docs: 打开线上页面 (Online page)"
      },
      {
        "command": "m5docs.openPreview",
        "title": "M5Docs: 打开本地预览 (Local preview)"
      },
      {
        "command": "m5docs.openFromUrl",
        "title": "M5Docs: 从 URL 打开文件 (Open file from URL)"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "-",
          "group": "M5Docs@00"
        },
        {
          "command": "m5docs.openAllLanguages",
          "group": "M5Docs@01",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/)"
        },
        {
          "command": "m5docs.openSibling.zh_CN",
          "group": "M5Docs@02",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/) && !(resourcePath =~ /[\\\\/]static[\\\\/]zh_CN[\\\\/]/)"
        },
        {
          "command": "m5docs.openSibling.en",
          "group": "M5Docs@03",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/) && !(resourcePath =~ /[\\\\/]static[\\\\/]en[\\\\/]/)"
        },
        {
          "command": "m5docs.openSibling.ja",
          "group": "M5Docs@04",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/) && !(resourcePath =~ /[\\\\/]static[\\\\/]ja[\\\\/]/)"
        },
        {
          "command": "m5docs.openOnline",
          "group": "M5Docs@05",
          "when": "resourceExtname == .md"
        },
        {
          "command": "m5docs.openPreview",
          "group": "M5Docs@06",
          "when": "resourceExtname == .md"
        },
        {
          "command": "-",
          "group": "M5Docs@07"
        }
      ],
      "explorer/context": [
        {
          "command": "-",
          "group": "M5Docs@00"
        },
        {
          "command": "m5docs.openAllLanguages",
          "group": "M5Docs@01",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/)"
        },
        {
          "command": "m5docs.openSibling.zh_CN",
          "group": "M5Docs@02",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/) && !(resourcePath =~ /[\\\\/]static[\\\\/]zh_CN[\\\\/]/)"
        },
        {
          "command": "m5docs.openSibling.en",
          "group": "M5Docs@03",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/) && !(resourcePath =~ /[\\\\/]static[\\\\/]en[\\\\/]/)"
        },
        {
          "command": "m5docs.openSibling.ja",
          "group": "M5Docs@04",
          "when": "(resourceExtname == .md) && (resourcePath =~ /[\\\\/]static[\\\\/](zh_CN|en|ja)[\\\\/]/) && !(resourcePath =~ /[\\\\/]static[\\\\/]ja[\\\\/]/)"
        },
        {
          "command": "m5docs.openOnline",
          "group": "M5Docs@05",
          "when": "resourceExtname == .md"
        },
        {
          "command": "m5docs.openPreview",
          "group": "M5Docs@06",
          "when": "resourceExtname == .md"
        },
        {
          "command": "-",
          "group": "M5Docs@07"
        }
      ],
      "commandPalette": [
        {
          "command": "m5docs.openAllLanguages",
          "when": "true"
        },
        {
          "command": "m5docs.openFromUrl",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "M5Docs Team Helper",
      "properties": {
        "m5docs.languages": {
          "type": "array",
          "default": [
            "zh_CN",
            "en",
            "ja"
          ],
          "description": "文档支持的语言列表（用于 sibling 切换、URL 解析）。"
        },
        "m5docs.docsRootName": {
          "type": "string",
          "default": "nuxt-m5-docs",
          "description": "（多根工作区下使用）优先作为文档根目录的工作区文件夹名。"
        },
        "m5docs.staticDirName": {
          "type": "string",
          "default": "static",
          "description": "静态文档所在目录名（默认 static）。"
        },
        "m5docs.onlineBaseUrl": {
          "type": "string",
          "default": "https://docs.m5stack.com",
          "description": "线上文档基址（base URL）。"
        },
        "m5docs.previewBaseUrl": {
          "type": "string",
          "default": "http://127.0.0.1:3000",
          "description": "本地预览基址（如 http://192.168.x.x:3000）。"
        },
        "m5docs.createTemplate": {
          "type": "string",
          "default": "# ${BASENAME}\n\n> TODO: 内容待补充。",
          "description": "自动创建新文档时写入的初始内容模板。可用占位符 ${BASENAME}。"
        },
        "m5docs.treatReadmeAsIndex": {
          "type": "boolean",
          "default": true,
          "description": "生成 URL 时将 README.md 视为目录首页（去掉路径末尾的 /README）。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}